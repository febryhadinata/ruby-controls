<!DOCTYPE html>
<html>
<head>
  <title>RubyControls</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  
<div class="header">
  <div class="container">

    <div class="nav">
      <% if current_user %>
        <ul>
          <li><%= current_user.email %> | <%= link_to "Log out", logout_path, method: "delete" %></li>
        </ul>
      <% else %>
        <ul>
          <li><%= link_to "Log in", login_path %> | <%= link_to "Sign up", register_path %></li>
        </ul>
      <% end %>
    </div>
  
    <div class="logo">
    </div>
  
  </div>
</div>

<%= yield %>

</body>
</html>
