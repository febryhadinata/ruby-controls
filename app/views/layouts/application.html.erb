<!DOCTYPE html>
<html>
<head>
  <title>RubyControls</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="header">
  <div class="container">

    <div class="navbar navbar-static-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">MyFurni</a>
        </div>

        <ul class="nav navbar-nav">
          <li class="active"><%= link_to 'Home', root_path %></li>
          <li class="dropdown">
            <%= link_to brands_path, class: "dropdown-toggle", data: { toggle: "dropdown" } do %>
              Module<span class="caret"></span>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to 'Brand', brands_path %></li>
            </ul>
          </li>
          <li><a href="#">Page 2</a></li>
          <li><a href="#">Page 3</a></li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
            <li><span class="glyphicon glyphicon-user"></span><%= current_user.email %></li>
            <li>
              <%= link_to logout_path, method: "delete" do %>
                <span class="glyphicon glyphicon-log-in"></span> Logout
              <% end %>
            </li>
          <% else %>
            <li><%= link_to login_path do %>
              <span class="glyphicon glyphicon-log-in"></span> Login
            <% end %></li> |
            <li><%= link_to register_path do %>
              <span class="glyphicon glyphicon-user"></span> Sign Up
            <% end %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="logo">
    </div>

  </div>
</div>


<%= yield %>

</body>
</html>
